<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rlRoot"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_word_preview"
                android:background="#fff"
                android:minHeight="100dp"
                android:paddingLeft="32dp"
                android:visibility="visible">


    <TextView
        android:id="@+id/tvWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:text="尴尬 【gan ga】"
        android:textSize="24sp"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/vClose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_close_word"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_dialog_close_normal_holo"
        android:visibility="gone"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvWord"
        android:layout_marginTop="19dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--android:background="#4444"-->
            <TextView
                android:id="@+id/tvExplain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="125dp"
                android:lines="1"
                android:text="基本释义："
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tvGoToDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="18dp"
        android:layout_marginEnd="24dp"
        android:padding="10dp"
        android:paddingRight="0dp"
        android:text="查看详情  >"
        android:textColor="#31ACFD"
        android:textSize="18sp"/>
    <!--android:layout_marginEnd="31dp"-->
    <!--android:layout_marginBottom="24dp"-->
</RelativeLayout>
